{
  "name": "credentials",
  "version": "1.0.0",
  "description": "A comprehensive, enterprise-grade credentials management system with Redis caching, Bloom filters, and real-time monitoring",
  "main": "index.js",
  "scripts": {
    "build": "npx lerna run build",
    "build:all": "npx lerna run build",
    "clean": "npx lerna run clean && npx -y rimraf node_modules",
    "clean:all": "npx -y lerna run clean && npx -y rimraf node_modules",
    "dev": "npx lerna run dev --parallel",
    "start": "npx lerna run start --parallel",
    "test": "npx lerna run test",
    "lint": "npx lerna run lint",
    "setup": "./tools/scripts/project-maintenance.sh setup",
    "organize": "./tools/scripts/project-maintenance.sh organize",
    "status": "./tools/scripts/project-maintenance.sh status",
    "security": "./tools/scripts/project-maintenance.sh security",
    "deploy": "./tools/scripts/project-maintenance.sh deploy",
    "performance": "./tools/performance/k6/run-performance-tests.sh all",
    "performance:baseline": "./tools/performance/k6/run-performance-tests.sh baseline",
    "performance:general": "./tools/performance/k6/run-performance-tests.sh general",
    "performance:admin": "./tools/performance/k6/run-performance-tests.sh admin",
    "performance:bloom": "./tools/performance/k6/run-performance-tests.sh bloom",
    "loadtest": "./tools/performance/k6/run-performance-tests.sh all",
    "loadtest:general": "./tools/performance/k6/run-performance-tests.sh general",
    "loadtest:admin": "./tools/performance/k6/run-performance-tests.sh admin",
    "loadtest:bloom": "./tools/performance/k6/run-performance-tests.sh bloom"
  },
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "keywords": [
    "credentials",
    "authentication",
    "redis",
    "bloom-filter",
    "fastify",
    "angular",
    "typescript",
    "performance",
    "monitoring",
    "enterprise"
  ],
  "author": "Credentials Management Team",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.2.0",
    "lerna": "^8.2.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "rimraf": "^6.0.1",
    "glob": "^10.3.10",
    "inflight": "npm:@tootallnate/inflight@^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/red2n/credentials.git"
  },
  "bugs": {
    "url": "https://github.com/red2n/credentials/issues"
  },
  "homepage": "https://github.com/red2n/credentials#readme"
