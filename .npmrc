# NPM Configuration for Credentials Management System

# Dependency resolution
legacy-peer-deps=true

# Suppress deprecation warnings from sub-dependencies
# These warnings come from packages that lerna and other tools depend on
# and are not directly controlled by our package.json
audit-level=moderate

# Performance optimizations
progress=true
fund=false

# Registry configuration
registry=https://registry.npmjs.org/

# Security settings
audit=true
